<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/deepTealPrimaryColor</item>
        <item name="colorPrimaryDark">@color/deepTealPrimaryDarkColor</item>
        <item name="colorAccent">@color/deepTealAccentColor</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_activity_bg</item>
    </style>

    <style name="LoginTheme" parent="AppTheme"/>

    <style name="AuthenticationTheme" parent="AppTheme"/>

    <style name="DashboardTheme" parent="AppTheme"/>

    <style name="OrderbookTheme" parent="AppTheme"/>

    <style name="BaseTextView">
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_drawable</item>
    </style>

    <style name="SingleLineTextView" parent="BaseTextView">
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TitleTextView" parent="SingleLineTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LoginEditText" parent="SingleLineTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_edit_text_background_drawable</item>
        <item name="android:padding">@dimen/login_edit_text_padding</item>
        <item name="android:textSize">@dimen/login_edit_text_text_size</item>
    </style>

    <style name="LoginHelpButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/login_help_button_padding</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/login_help_button_text_size</item>
    </style>

    <style name="LoginConfirmationView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/login_confirmation_view_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/login_confirmation_view_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/login_confirmation_view_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/login_confirmation_view_horizontal_margin</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CurrencyMarketsSortPanelTitle" parent="SingleLineTextView">
        <item name="android:textSize">@dimen/currency_markets_sort_panel_title_size</item>
    </style>

    <style name="NavigationDrawerHeaderUserName" parent="SingleLineTextView">
        <item name="android:textSize">@dimen/navigation_drawer_header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NavigationDrawerHeaderEmail" parent="SingleLineTextView">
        <item name="android:textSize">@dimen/navigation_drawer_header_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PrimaryButton" parent="SingleLineTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/primary_button_height</item>
        <item name="android:paddingLeft">@dimen/primary_button_horizontal_padding</item>
        <item name="android:paddingStart">@dimen/primary_button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/primary_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/primary_button_horizontal_padding</item>
        <item name="android:drawablePadding">@dimen/primary_button_drawable_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/primary_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minEms">10</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SecondaryButton" parent="SingleLineTextView">
        <item name="android:paddingTop">@dimen/secondary_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/secondary_button_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/secondary_button_horizontal_padding</item>
        <item name="android:paddingStart">@dimen/secondary_button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/secondary_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/secondary_button_horizontal_padding</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/secondary_button_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CurrencyMarketBaseCurrencySymbol" parent="SingleLineTextView">
        <item name="android:textSize">@dimen/currency_market_item_base_currency_symbol_text_size</item>
    </style>

    <style name="CurrencyMarketQuoteCurrencySymbol" parent="SingleLineTextView">
        <item name="android:textSize">@dimen/currency_market_item_quote_currency_symbol_text_size</item>
    </style>

    <style name="CurrencyMarketVolume" parent="SingleLineTextView">
        <item name="android:textSize">@dimen/currency_market_item_volume_text_size</item>
    </style>

    <style name="CurrencyMarketLastPrice" parent="SingleLineTextView">
        <item name="android:textSize">@dimen/currency_market_item_last_price_text_size</item>
    </style>

    <style name="CurrencyMarketDailyPriceChange" parent="SingleLineTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/currency_market_item_daily_price_change_text_size</item>
    </style>

    <style name="AboutHeaderAppName" parent="SingleLineTextView">
        <item name="android:textSize">@dimen/about_activity_header_app_name_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AboutHeaderAppVersion" parent="SingleLineTextView">
        <item name="android:textSize">@dimen/about_activity_header_app_version_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AboutHeaderAppDescription">
        <item name="android:textSize">@dimen/about_activity_header_description_text_size</item>
    </style>

    <style name="TradeUserBalancesTitle" parent="SingleLineTextView">
        <item name="android:textSize">@dimen/trade_activity_user_balance_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PinEntryDigitButton">
        <item name="android:layout_width">@dimen/pin_entry_keypad_button_size</item>
        <item name="android:layout_height">@dimen/pin_entry_keypad_button_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/pin_entry_keypad_digit_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/pin_entry_digit_button_drawable</item>
    </style>

    <style name="PinEntryActionButton">
        <item name="android:layout_width">@dimen/pin_entry_keypad_button_size</item>
        <item name="android:layout_height">@dimen/pin_entry_keypad_button_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PinBox">
        <item name="android:layout_width">@dimen/authentication_activity_pin_box_size</item>
        <item name="android:layout_height">@dimen/authentication_activity_pin_box_size</item>
        <item name="android:layout_marginLeft">@dimen/authentication_activity_pin_box_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/authentication_activity_pin_box_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/authentication_activity_pin_box_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/authentication_activity_pin_box_horizontal_margin</item>
    </style>

    <style name="Dialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="DefaultDialogTheme" parent="Dialog">
        <item name="colorPrimary">@color/deepTealPrimaryColor</item>
        <item name="colorPrimaryDark">@color/deepTealPrimaryDarkColor</item>
        <item name="colorAccent">@color/deepTealAccentColor</item>

        <item name="android:windowBackground">@drawable/dialog_inset_drawable</item>
    </style>

    <style name="DialogCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dialog_card_view_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/dialog_card_view_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/dialog_card_view_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/dialog_card_view_horizontal_margin</item>
    </style>

    <style name="DialogContentContainer">
        <item name="android:id">@id/contentContainerRl</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dialog_content_container_padding_top</item>
        <item name="android:paddingBottom">@dimen/dialog_content_container_padding_bottom</item>
    </style>

    <style name="DialogMainContainer">
        <item name="android:id">@id/mainContainerRl</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dialog_main_container_horizontal_margin</item>
        <item name="android:paddingStart">@dimen/dialog_main_container_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/dialog_main_container_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/dialog_main_container_horizontal_margin</item>
    </style>

    <style name="DialogTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dialog_subtitle_margin_top</item>
        <item name="android:textSize">@dimen/dialog_subtitle_text_size</item>
    </style>

    <style name="DialogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dialog_button_margin_top</item>
        <item name="android:layout_marginRight">@dimen/dialog_button_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/dialog_button_horizontal_margin</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/dialog_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/dialog_button_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/dialog_button_horizontal_padding</item>
        <item name="android:paddingStart">@dimen/dialog_button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/dialog_button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/dialog_button_horizontal_padding</item>
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CredentialsDialogEditText" parent="SingleLineTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/credentials_dialog_edit_text_padding_bottom</item>
        <item name="android:textSize">@dimen/credentials_dialog_edit_text_text_size</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="SwitchTheme" parent="AppTheme">
        <item name="colorControlActivated">@color/deepTealAccentColor</item>
        <item name="colorSwitchThumbNormal">@color/deepTealAccentColor</item>
        <item name="android:colorForeground">@color/deepTealAccentColor</item>
    </style>

    <style name="CurrencyMarketPreviewBottomBarButton" parent="PrimaryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_height">@dimen/currency_market_preview_bottom_bar_button_height</item>
        <item name="android:textSize">@dimen/currency_market_preview_bottom_bar_button_text_size</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="DepositInfoContainerBmv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/deposit_fragment_bmv_height</item>
        <item name="android:paddingLeft">@dimen/deposit_fragment_bmv_horizontal_padding</item>
        <item name="android:paddingStart">@dimen/deposit_fragment_bmv_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/deposit_fragment_bmv_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/deposit_fragment_bmv_horizontal_padding</item>
    </style>

</resources>
