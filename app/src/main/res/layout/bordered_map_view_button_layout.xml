<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bordered_map_view_vertical_margin"
        android:layout_marginLeft="@dimen/bordered_map_view_horizontal_margin"
        android:layout_marginStart="@dimen/bordered_map_view_horizontal_margin"
        android:layout_marginRight="@dimen/bordered_map_view_horizontal_margin"
        android:layout_marginEnd="@dimen/bordered_map_view_horizontal_margin"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/subtitleTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Last Price"
        style="@style/SingleLineTextView"/>

    <TextView
        android:id="@+id/subtitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bordered_map_view_vertical_margin"
        android:layout_marginLeft="@dimen/bordered_map_view_horizontal_margin"
        android:layout_marginStart="@dimen/bordered_map_view_horizontal_margin"
        android:layout_marginRight="@dimen/bordered_map_view_horizontal_margin"
        android:layout_marginEnd="@dimen/bordered_map_view_horizontal_margin"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="0.00001401 NXT"
        style="@style/SingleLineTextView"/>

</merge>