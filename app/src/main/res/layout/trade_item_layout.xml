<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/trade_item_vertical_padding"
    android:paddingBottom="@dimen/trade_item_vertical_padding">

    <TextView
        android:id="@+id/amountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/trade_item_horizontal_margin"
        android:layout_marginStart="@dimen/trade_item_horizontal_margin"
        android:layout_gravity="start"
        android:textSize="@dimen/trade_item_text_size"
        tools:text="0.0284294"
        tools:textColor="@color/white"/>

    <TextView
        android:id="@+id/priceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/trade_item_text_size"
        tools:text="0.00000028"
        tools:textColor="@color/colorGreenAccent"/>

    <TextView
        android:id="@+id/timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/trade_item_horizontal_margin"
        android:layout_marginEnd="@dimen/trade_item_horizontal_margin"
        android:layout_gravity="end"
        android:textSize="@dimen/trade_item_text_size"
        tools:text="07:00:56 PM"
        tools:textColor="@color/white"/>

</FrameLayout>