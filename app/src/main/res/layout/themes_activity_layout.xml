<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentContainerRl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/deepTealPrimaryColor">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:paddingTop="@dimen/themes_activity_recycler_view_vertical_padding"
        android:paddingBottom="@dimen/themes_activity_recycler_view_vertical_padding"
        android:paddingLeft="@dimen/themes_activity_recycler_view_horizontal_padding"
        android:paddingStart="@dimen/themes_activity_recycler_view_horizontal_padding"
        android:paddingRight="@dimen/themes_activity_recycler_view_horizontal_padding"
        android:paddingEnd="@dimen/themes_activity_recycler_view_horizontal_padding"
        android:overScrollMode="never"
        android:clipToPadding="false"/>

    <com.stocksexchange.android.ui.views.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/toolbar_elevation"
        app:title="@string/themes"
        app:leftButtonDrawable="@drawable/ic_arrow_left"/>

</RelativeLayout>